{
    "globalShortcut": "Ctrl+Space",
    "mcpServers": {
      "sqlite": {
        "command": "uvx",
        "args": [
          "mcp-server-sqlite",
          "--db-path",
          "/home/youruser/Desktop/Car_Database.db"
        ]
      },
      "ddg-search": {
        "command": "uvx",
        "args": ["duckduckgo-mcp-server"]
      },
